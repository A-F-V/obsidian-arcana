{
	"compilerOptions": {
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "dist",
		"target": "ES2020", // or higher
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowJs": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"jest.config.js"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
}