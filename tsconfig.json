{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "target": "ESNext", // or higher
        "module": "NodeNext",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "jsx": "react"
    },
    "include": [
        "**/*.ts"
    ]
}